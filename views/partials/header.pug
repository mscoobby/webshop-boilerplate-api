.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') Webshop Boilerplate
    .collapse.navbar-collapse
      .navigation-box
        ul.nav.navbar-nav
          li(class=(title == 'Home') ? 'active' : undefined)
            a(href='/') Home
          li(class=(title == 'Contact') ? 'active' : undefined)
            a(href='/contact') Contact
          li(class=(title == 'Shop') ? 'active' : undefined)
            a(href="/shop") Shop
        ul.nav.navbar-nav.navbar-center
          li: a(href='/')
            i.fa.fa-cube
        ul.nav.navbar-nav.navbar-right
          li(class=(title == 'Cart') ? 'active' : undefined)
            a(href='/shop/cart').bag-container
              i.fa.fa-shopping-bag.fa-lg
              span.badge= session.cart ? session.cart.qty : 0 || 0
          if !user
            li.dropdown
              a.dropdown-toggle(href='#', data-toggle='dropdown')
                span Account
                i.caret
              ul.dropdown-menu
                li(class=(title == 'Login') ? 'active' : undefined)
                  a(href='/user/login') Login
                li(class=(title == 'Create Account') ? 'active' : undefined)
                  a(href='/user/signup') Create Account
          else
            li.dropdown(class=(title == 'Account Management') ? 'active' : undefined)
              a.dropdown-toggle(href='#', data-toggle='dropdown')
                //- if user.profile.picture
                //-   img(src=user.profile.picture)
                //- else
                //-   img(src=user.gravatar(60))
                span= user.profile.name || user.email || user.id
                i.caret
              ul.dropdown-menu
                li
                  a(href='/user/account') My Account
                li.divider
                li
                  a(href='/user/logout') Logout
